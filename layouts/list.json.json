[{{ range $index , $e := .Page.RegularPagesRecursive }}{{ if $index }},{{end}}{{ $date := (.Date | time.Format "2006-01-02") }}{
  "title": {{ .Title | plainify | jsonify  }},
  "description": {{ .Description | plainify | jsonify }},
  "url": {{ .Params.original_url | plainify | jsonify }},
  {{ with .Params.categories }}"categories": [
    {{ range $i, $cat := . }}
    {{ if $i }},{{ end }}
      {{ $cat | urlize | jsonify }}
    {{ end }}],
  {{ end }}
  "date": {{ $date | plainify | jsonify }}
}{{end}}]